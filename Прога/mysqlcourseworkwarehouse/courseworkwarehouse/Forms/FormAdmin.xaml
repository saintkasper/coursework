                                <StackPanel Orientation="Horizontal"
                                            materialDesign:RippleAssist.IsCentered="True"
                                            HorizontalAlignment="Right">
                                    <Button x:Name="btnAdd"
                                            Style="{StaticResource MaterialDesignFlatSecondaryMidBgButton}"
                                            Content="Добавить"
                                            FontSize="20"
                                            VerticalAlignment="Top"
                                            HorizontalAlignment="Right"
                                            Width="200"
                                            Height="50"
                                            Margin="0,0,20,0"
                                            Background="#FF39B747"
                                            Foreground="White"
                                            BorderBrush="#FF39B747"
                                            Click="btnAdd_Click" />
                                    <Button x:Name="btnDelete"
                                            Style="{StaticResource MaterialDesignFlatSecondaryMidBgButton}"
                                            Content="Удалить"
                                            FontSize="20"
                                            VerticalAlignment="Top"
                                            HorizontalAlignment="Right"
                                            Margin="0,0,20,0"
                                            Width="200"
                                            Height="50"
                                            Background="#FF39B747"
                                            Foreground="White"
                                            BorderBrush="#FF39B747"
                                            Cursor="Hand"
                                            Click="btnDelete_Click" />
                                    <Button x:Name="btnExitEmployee"
                                            ToolTip="Сменить пользователя"
                                            ToolBar.OverflowMode="Always"
                                            Background="#FF39B747"
                                            BorderBrush="#FF39B747"
                                            Foreground="White"
                                            Height="50"
                                            Width="50"
                                            Cursor="Hand"
                                            Click="btnExitEmployee_Click">
                                        <materialDesign:PackIcon Width="25"
                                                                 Height="25"
                                                                 HorizontalAlignment="Center"
                                                                 Kind="ExitToApp"
                                                                 Foreground="White" />
                                    </Button>

                                </StackPanel>
                            </DockPanel>
                        </materialDesign:ColorZone>


                        <DataGrid x:Name="dg"
                                  VerticalAlignment="Bottom"
                                  HorizontalAlignment="Center"
                                  Width="1820"
                                  Height="928"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  CanUserResizeColumns="False"
                                  AutoGenerateColumns="False"
                                  CanUserReorderColumns="False"
                                  CanUserSortColumns="False"
                                  FontSize="18">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Style="{StaticResource MaterialDesignFlatSecondaryMidBgButton}"
                                                    Content="Редактировать"
                                                    FontSize="14"
                                                    Background="#FF39B747"
                                                    Foreground="White"
                                                    BorderBrush="#FF39B747"
                                                    Click="Button_Click" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="ФИО"
                                                    Binding="{Binding [ФИО], StringFormat={}{0:dd/MM/yyyy}}" />
                                <DataGridTextColumn Header="Дата рождения"
                                                    Binding="{Binding [Дата рождения], StringFormat={}{0:dd/MM/yyyy}}" />
                                <DataGridTextColumn Header="Паспортные данные"
                                                    Binding="{Binding [Паспортные данные]}" />
                                <DataGridTextColumn Header="Номер телефона"
                                                    Binding="{Binding [Номер телефона]}" />
                                <DataGridTextColumn Header="Логин"
                                                    Binding="{Binding [Логин]}" />
                                <DataGridTextColumn Header="Пароль"
                                                    Binding="{Binding [Пароль]}" />
                                <DataGridTextColumn Header="Employee_num" Visibility="Hidden"
                                                    Binding="{Binding [Код]}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>
                <TabItem x:Name="tiSupplier"
                         Width="100"
                         Margin="0,10,0,10"
                         Loaded="tiSupplier_Loaded">
                    <TabItem.Header>
                        <StackPanel Width="auto"
                                    Height="auto">
                            <materialDesign:PackIcon Width="30"
                                                     Height="30"
                                                     HorizontalAlignment="Center"
                                                     Kind="AccountGroup"
                                                     Foreground="#005800" />
                            <TextBlock HorizontalAlignment="Center"
                                       Text="Поставщики"
                                       Foreground="#005800" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <materialDesign:ColorZone Mode="PrimaryMid"
                                                  Background="#005800"
                                                  Padding="16"
                                                  materialDesign:ShadowAssist.ShadowDepth="Depth3"
                                                  materialDesign:ShadowAssist.ShadowEdges="Top">
                            <DockPanel>
                                <StackPanel Orientation="Horizontal"
                                            materialDesign:RippleAssist.IsCentered="True">
                                    <materialDesign:ColorZone Mode="Standard"
                                                              Padding="8 4 8 4"
                                                              CornerRadius="2"
                                                              Panel.ZIndex="1"
                                                              Margin="16 5 0 0"
                                                              materialDesign:ShadowAssist.ShadowDepth="Depth1"
                                                              Width="400">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition Height="0*" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Button Style="{StaticResource MaterialDesignToolButton}"
                                                    Cursor="Arrow"
                                                    IsEnabled="False"
                                                    Opacity="0.7">
                                                <materialDesign:PackIcon Kind="Search" />
                                            </Button>
                                            <TextBox Name="tbSearchSupplier"
                                                     FontSize="18"
                                                     Grid.Column="1"
                                                     Margin="8,0,0,0"
                                                     materialDesign:HintAssist.Hint="Поиск"
                                                     materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                                     BorderThickness="0"
                                                     MinWidth="200"
                                                     VerticalAlignment="Center"
                                                     SelectionBrush="#FF70A981"
                                                     CaretBrush="DarkGreen"
                                                     Cursor="Arrow"
                                                     TextChanged="tbSearchSupplier_TextChanged" />
                                        </Grid>
                                    </materialDesign:ColorZone>

                                    <RadioButton x:Name="rbWithoutSupplier"
                                                 Style="{StaticResource MaterialDesignChoiceChipRadioButton}"
                                                 Margin="20,0,10,0"
                                                 GroupName="GroupChoiceChip"
                                                 Content="Без сортировки"
                                                 Background="LightSkyBlue"
                                                 Foreground="White"
                                                 FontSize="18"
                                                 Cursor="Hand"
                                                 Checked="rbWithoutSupplier_Checked" />
                                    <RadioButton x:Name="rbAscSupplier"
                                                 Style="{StaticResource MaterialDesignChoiceChipRadioButton}"
                                                 Margin="10,0,10,0"
                                                 GroupName="GroupChoiceChip"
                                                 Content="По возрастанию"
                                                 Background="LightSkyBlue"
                                                 Foreground="White"
                                                 FontSize="18"
                                                 Checked="rbAscSupplier_Checked" />
                                    <RadioButton x:Name="rbDescSupplier"
                                                 Style="{StaticResource MaterialDesignChoiceChipRadioButton}"
                                                 Margin="10,0,10,0"
                                                 GroupName="GroupChoiceChip"
                                                 Content="По убыванию"
                                                 Background="LightSkyBlue"
                                                 Foreground="White"
                                                 FontSize="18"
                                                 Cursor="Hand"
                                                 Checked="rbDescSupplier_Checked" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"
                                            materialDesign:RippleAssist.IsCentered="True"
                                            HorizontalAlignment="Right">
                                    <Button x:Name="btnAddSupplier"
                                            Style="{StaticResource MaterialDesignFlatSecondaryMidBgButton}"
                                            Content="Добавить"
                                            FontSize="20"
                                            VerticalAlignment="Top"
                                            HorizontalAlignment="Right"
                                            Width="200"
                                            Height="50"
                                            Margin="0,0,20,0"
                                            Background="#FF39B747"
                                            Foreground="White"
                                            BorderBrush="#FF39B747"
                                            Click="btnAddSupplier_Click"
                                            Cursor="Hand" />
                                    <Button x:Name="btnDeleteSupplier"
                                            Style="{StaticResource MaterialDesignFlatSecondaryMidBgButton}"
                                            Content="Удалить"
                                            FontSize="20"
                                            VerticalAlignment="Top"
                                            HorizontalAlignment="Right"
                                            Margin="0,0,20,0"
                                            Width="200"
                                            Height="50"
                                            Background="#FF39B747"
                                            Foreground="White"
                                            BorderBrush="#FF39B747"
                                            Cursor="Hand"
                                            Click="btnDeleteSupplier_Click" />
                                    <Button x:Name="btnExitSupplier"
                                            ToolTip="Сменить пользователя"
                                            ToolBar.OverflowMode="Always"
                                            Background="#FF39B747"
                                            BorderBrush="#FF39B747"
                                            Foreground="White"
                                            Height="50"
                                            Width="50"
                                            Cursor="Hand"
                                            Click="btnExitSupplier_Click">
                                        <materialDesign:PackIcon Width="25"
                                                                 Height="25"
                                                                 HorizontalAlignment="Center"
                                                                 Kind="ExitToApp"
                                                                 Foreground="White" />
                                    </Button>
                                </StackPanel>
                            </DockPanel>
                        </materialDesign:ColorZone>

                        <DataGrid x:Name="dgSupplier"
                                  VerticalAlignment="Bottom"
                                  HorizontalAlignment="Center"
                                  Width="1820"
                                  Height="928"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  CanUserResizeColumns="False"
                                  CanUserReorderColumns="False"
                                  CanUserSortColumns="False"
                                  MaxColumnWidth="750"
                                  FontSize="18">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Style="{StaticResource MaterialDesignFlatSecondaryMidBgButton}"
                                                    Content="Редактировать"
                                                    FontSize="14"
                                                    Background="#FF39B747"
                                                    Foreground="White"
                                                    BorderBrush="#FF39B747"
                                                    Click="btnEditSupplier_Click" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>
                <TabItem x:Name="tiCopy"
                         Width="100"
                         Visibility="Hidden"
                         Margin="0,10,0,10">
                    <TabItem.Header>
                        <StackPanel Width="auto"
                                    Height="auto">
                            <materialDesign:PackIcon Width="30"
                                                     Height="30"
                                                     HorizontalAlignment="Center"
                                                     Kind="ContentCopy"
                                                     Foreground="#005800" />
                            <TextBlock HorizontalAlignment="Center"
                                       Text="  Резервное&#xA;копирование"
                                       Foreground="#005800" />
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <StackPanel VerticalAlignment="Top"
                                    HorizontalAlignment="Center">
                            <Border Background="#FF39B747"
                                    Width="1820"
                                CornerRadius="0,0,5,5"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Top">
                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center">
