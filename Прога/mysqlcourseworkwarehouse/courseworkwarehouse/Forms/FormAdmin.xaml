                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           Foreground="White" />
                            </StackPanel>
                            </Border>
                            <Button x:Name="btnSaveBackup"
                                    Style="{StaticResource MaterialDesignFlatSecondaryMidBgButton}"
                                    Content="Сохранить"
                                    FontSize="24"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Left"
                                    Width="300"
                                    Height="75"
                                    Margin="110,170,0,0"
                                    Background="#FF39B747"
                                    Foreground="White"
                                    BorderBrush="#FF39B747"
                                    Cursor="Hand"
                                    Click="btnSaveBackup_Click" />
                            <Button x:Name="btnBackupPath"
                                    Style="{StaticResource MaterialDesignFlatSecondaryMidBgButton}"
                                    Content="Выбрать данные"
                                    FontSize="24"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Left"
                                    Width="300"
                                    Height="75"
                                    Margin="110,170,0,0"
                                    Background="#FF39B747"
                                    Foreground="White"
                                    BorderBrush="#FF39B747"
                                    Cursor="Hand"
                                    Click="btnBackupPath_Click" />
                            <Button x:Name="btnRecover"
                                    Style="{StaticResource MaterialDesignFlatSecondaryMidBgButton}"
                                    Content="Восстановить"
                                    FontSize="24"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Left"
                                    Width="300"
                                    Height="75"
                                    Margin="110,170,0,0"
                                    Background="#FF39B747"
                                    Foreground="White"
                                    BorderBrush="#FF39B747"
                                    Cursor="Hand"
                                    Click="btnRecover_Click" />
                        </StackPanel>
                        <Image Source="/Images/EllipseLogo.png" Width="450" Margin="250,0,0,0"/>
                    </Grid>
                </TabItem>
            </TabControl>
        </materialDesign:Card>
    </Grid>
</Window>
